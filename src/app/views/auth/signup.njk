{% extends "_layouts/auth.njk" %}

{% block body %}
    <form action="/signup" method="post" enctype="multipart/form-data">
        <label for="avatar">
            <img src="/images/avatar.svg" height="24" />
        </label>

        <input id="avatar" name="avatar" type="file" />
        <input type="text" name="name" placeholder="Nome Completo" />
        <input type="text" name="email" placeholder="Seu e-mail" />
        <input type="password" name="password" placeholder="Senha" />

        <label for="provider">
            <input type="checkbox" id="provider" name="provider" value="1"/>Sou cabelereiro
        </label>

        <button type="submit">Criar conta</button>
        <a href="/signin">JÃ¡ possuo uma conta</a>
    </form>

    <script type="text/javascript">
        const avatarInput = document.querySelector('#avatar')
        const avatar = document.querySelector('label[for=avatar] img')

        avatarInput.onchange = e => {
            avatar.classList.add('preview')
            avatar.src = URL.createObjectURL(e.target.files[0])
        }
    </script>
{% endblock %}